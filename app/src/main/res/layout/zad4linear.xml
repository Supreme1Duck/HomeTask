<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_margin="15dp"
        android:textSize="25sp"
        android:text="Android"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="90dp"
            android:layout_marginEnd="20dp"
            android:layout_height="90dp"
            android:background="#60000000"/>

        <TextView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:gravity="center"
            android:textColor="#000"
            android:text="125 Posts"/>

        <TextView
            android:gravity="center"
            android:textColor="#000"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:text="20k\n Followers"
            android:layout_margin="15dp"/>
        <TextView
            android:gravity="center"
            android:textColor="#000"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_margin="15dp"
            android:text="22\n Following"/>
    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textColor="#000"
        android:layout_marginStart="15dp"
        android:textSize="17sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Address"
        android:layout_marginTop="9dp"
        android:textColor="#000"
        android:layout_marginStart="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Description"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:layout_marginStart="15dp"/>

    <LinearLayout
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
            android:layout_marginStart="10dp"
        android:background="#60000000"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:background="#60000000"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:background="#60000000"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:background="#60000000"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:background="#60000000"/>

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:background="#60000000"/>
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:layout_height="wrap_content">

        <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
            android:tint="@color/colorAccent"
        android:layout_marginStart="35dp"
        app:srcCompat="@drawable/baseline_room_black_18dp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:tint="@color/colorAccent"
            android:layout_marginStart="75dp"
            app:srcCompat="@drawable/baseline_settings_phone_black_18dp" />

        <ImageView
            android:layout_width="25dp"
            android:tint="@color/colorAccent"
            android:layout_height="25dp"
            android:layout_marginStart="75dp"
            app:srcCompat="@drawable/baseline_verified_user_black_18dp" />

        <ImageView
            android:layout_width="25dp"
            android:tint="@color/colorAccent"
            android:layout_height="25dp"
            android:layout_marginStart="75dp"
            app:srcCompat="@drawable/baseline_http_black_18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="-10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DIRECTIONS"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CALL"
            android:layout_marginStart="45dp"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:text="SAVE"
            android:textColor="@color/colorAccent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:text="WEBSITE"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>

    <View
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#C1BFBF"/>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:background="#60000000"
            android:layout_marginStart="10dp"/>

        <ImageView
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:background="#60000000"
            android:layout_marginStart="15dp"/>

        <ImageView
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:background="#60000000"
            android:layout_marginStart="15dp"/>

    </LinearLayout>
</LinearLayout>