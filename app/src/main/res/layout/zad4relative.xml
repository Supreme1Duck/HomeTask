<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Android"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/textView2"
        android:layout_marginStart="15dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="20dp"
        android:background="#60000000" />

    <TextView
        android:id="@+id/texview2"
        android:layout_width="35dp"
        android:layout_below="@id/textView2"
        android:layout_toEndOf="@id/textView2"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:gravity="center"
        android:textColor="#000"
        android:text="125 Posts"/>

    <TextView
        android:gravity="center"
        android:id="@+id/textview3"
        android:layout_below="@id/textView2"
        android:layout_toEndOf="@id/texview2"
        android:textColor="#000"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:text="20k\n Followers"
        android:layout_margin="15dp"/>
    <TextView
        android:id="@+id/textview4"
        android:layout_below="@id/textView2"
        android:layout_toEndOf="@id/textview3"
        android:gravity="center"
        android:textColor="#000"
        android:layout_width="65dp"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:text="22\n Following"/>

    <TextView
        android:id="@+id/textview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image1"
        android:text="Username"
        android:textColor="#000"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:textSize="17sp"/>
    <TextView
        android:id="@+id/textview6"
        android:layout_below="@id/textview5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Address"
        android:layout_marginTop="9dp"
        android:textColor="#000"
        android:layout_marginStart="15dp"/>

    <TextView
        android:id="@+id/textview7"
        android:layout_width="wrap_content"
        android:layout_below="@id/textview6"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:text="Description"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:layout_marginStart="15dp"/>

    <ImageView
        android:id="@+id/image2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/textview7"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:background="#60000000" />

    <ImageView
        android:layout_below="@id/textview7"
        android:layout_toEndOf="@id/image2"
        android:id="@+id/image3"
        android:layout_marginTop="15dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:background="#60000000"/>

    <ImageView
        android:id="@+id/image4"
        android:layout_below="@id/textview7"
        android:layout_toEndOf="@id/image3"
        android:layout_width="45dp"
        android:layout_marginTop="15dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:background="#60000000"/>

    <ImageView
        android:layout_below="@id/textview7"
        android:layout_toEndOf="@id/image4"
        android:id="@+id/image5"
        android:layout_width="45dp"
        android:layout_marginTop="15dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:background="#60000000"/>

    <ImageView
        android:layout_below="@id/textview7"
        android:layout_toEndOf="@id/image5"
        android:id="@+id/image6"
        android:layout_width="45dp"
        android:layout_marginTop="15dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:background="#60000000"/>

    <ImageView
        android:layout_below="@id/textview7"
        android:layout_toEndOf="@id/image6"
        android:id="@+id/image7"
        android:layout_width="45dp"
        android:layout_marginTop="15dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:background="#60000000"/>

    <ImageView
        android:id="@+id/kart1"
        android:layout_width="25dp"
        android:layout_below="@id/image2"
        android:layout_marginTop="35dp"
        android:layout_height="25dp"
        android:tint="@color/colorAccent"
        android:layout_marginStart="35dp"
        app:srcCompat="@drawable/baseline_room_black_18dp"/>

    <ImageView

        android:id="@+id/kart2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="35dp"
        android:layout_below="@id/image2"
        android:layout_toEndOf="@id/kart1"
        android:tint="@color/colorAccent"
        android:layout_marginStart="75dp"
        app:srcCompat="@drawable/baseline_settings_phone_black_18dp" />

    <ImageView
        android:id="@+id/kart3"
        android:layout_width="25dp"
        android:layout_below="@id/image2"
        android:layout_toEndOf="@id/kart2"
        android:tint="@color/colorAccent"
        android:layout_marginTop="35dp"
        android:layout_height="25dp"
        android:layout_marginStart="75dp"
        app:srcCompat="@drawable/baseline_verified_user_black_18dp" />

    <ImageView
        android:layout_below="@id/image2"
        android:layout_toEndOf="@id/kart3"
        android:id="@+id/kart4"
        android:layout_width="25dp"
        android:layout_marginTop="35dp"
        android:tint="@color/colorAccent"
        android:layout_height="25dp"
        android:layout_marginStart="75dp"
        app:srcCompat="@drawable/baseline_http_black_18dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/kart4"
        android:text="DIRECTIONS"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALL"
        android:layout_below="@id/kart2"
        android:layout_toEndOf="@id/text1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="45dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/text3"
        android:layout_below="@id/kart3"
        android:layout_toEndOf="@id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:text="SAVE"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:layout_below="@id/kart4"
        android:layout_toEndOf="@id/text3"
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:text="WEBSITE"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorAccent"/>

    <View
        android:id="@+id/view"
        android:layout_below="@id/text4"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#C1BFBF"/>

    <ImageView
        android:id="@+id/im1"
        android:layout_marginTop="20dp"
        android:layout_below="@id/view"
    android:layout_width="115dp"
    android:layout_height="115dp"
    android:background="#60000000"
    android:layout_marginStart="20dp"/>

    <ImageView
        android:id="@+id/im2"
        android:layout_marginTop="20dp"
        android:layout_below="@id/view"
        android:layout_toEndOf="@id/im1"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:background="#60000000"
        android:layout_marginStart="15dp"/>

    <ImageView
        android:id="@+id/im3"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/im2"
        android:layout_below="@id/view"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:background="#60000000"
        android:layout_marginStart="15dp"/>

</RelativeLayout>