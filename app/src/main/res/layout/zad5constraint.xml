<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="15dp"
        android:background="#60000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="56sp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="Photo"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:textSize="25sp"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"
            android:textColor="#FFF"
            android:text="Certificated"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="380dp"
        android:layout_height="47dp"
        android:background="#68EAE9E9"
        app:layout_constraintStart_toStartOf="@+id/frameLayout2"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="#494848"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="20dp"
            app:srcCompat="@android:drawable/ic_menu_share" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="70dp"
            android:tint="#7b7b7b"
            app:srcCompat="?attr/actionModeCopyDrawable" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:tint="#7b7b7b"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="120dp"
            app:srcCompat="@drawable/baseline_favorite_black_18dp" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame2"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:background="#60000000"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/frame1"
        app:layout_constraintLeft_toLeftOf="@id/frame1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="10dp"
            android:text="Layouts"
            android:textColor="#FFF"
            android:textSize="25sp" />
    </FrameLayout>
    <FrameLayout
        android:layout_width="180dp"
        app:layout_constraintLeft_toLeftOf="@id/frame2"
        android:background="#68EAE9E9"
        app:layout_constraintTop_toBottomOf="@id/frame2"
        android:layout_height="47dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="10dp"
            android:tint="#7b7b7b"
            app:srcCompat="@drawable/baseline_share_black_18dp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="45dp"
            app:srcCompat="?attr/actionModeCopyDrawable"
            android:layout_gravity="center_vertical|end"
            android:tint="#7b7b7b"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="85dp"
            android:tint="#7b7b7b"
            android:layout_gravity="center_vertical|end"
            app:srcCompat="@drawable/baseline_favorite_black_18dp"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frame3"
        android:layout_width="180dp"
        app:layout_constraintTop_toBottomOf="@id/frame1"
        app:layout_constraintLeft_toRightOf="@id/frame2"
        android:layout_marginTop="10dp"
        android:background="#60000000"
        android:layout_marginStart="15dp"
        app:layout_constraintRight_toRightOf="@id/frameLayout2"
        android:layout_height="200dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:text="View"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="bottom"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="47dp"
        app:layout_constraintTop_toBottomOf="@id/frame3"
        app:layout_constraintRight_toRightOf="@id/frameLayout2"
        app:layout_constraintLeft_toLeftOf="@id/frame3"
        android:background="#68EAE9E9">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="10dp"
            android:tint="#7b7b7b"
            app:srcCompat="@drawable/baseline_share_black_18dp"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="45dp"
            app:srcCompat="?attr/actionModeCopyDrawable"
            android:layout_gravity="center_vertical|end"
            android:tint="#7b7b7b"/>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginEnd="85dp"
            android:tint="#7b7b7b"
            android:layout_gravity="center_vertical|end"
            app:srcCompat="@drawable/baseline_favorite_black_18dp"/>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>